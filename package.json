{
  "name": "@planet57/forge",
  "version": "0.1.2",
  "description": "Modern CLI framework for deployments - TypeScript/Bun implementation",
  "author": "Jason Dillon",
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    "./command": "./lib/command.ts",
    "./*": "./lib/*"
  },
  "keywords": [
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jdillon/forge.git"
  },
  "files": [
    "lib/**/*.ts",
    "bin/forge",
    "bin/brew-bootstrap.sh",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "bun run pack && bun test",
    "test:junit": "bun run pack && mkdir -p build/test-reports && bun test --reporter=junit --reporter-outfile=build/test-reports/junit.xml",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf build/",
    "pack": "bun pm pack --destination build/ --quiet",
    "testsuite": "bun clean && bun install && bun pack && bun test",
    "reinstall": "bin/uninstall.sh -y && bun pm pack --destination build/ --quiet && bin/install.sh -y",
    "license:check": "license-check-and-add check -f license-checker.config.json",
    "license:add": "license-check-and-add add -f license-checker.config.json",
    "license:remove": "license-check-and-add remove -f license-checker.config.json"
  },
  "dependencies": {
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "colorette": "^2.0.20",
    "commander": "14.0.2",
    "cosmiconfig": "^9.0.0",
    "enquirer": "^2.4.1",
    "listr2": "^8.0.0",
    "omelette": "^0.4.17",
    "ora": "^8.0.0",
    "pino": "^8.19.0",
    "pino-pretty": "^11.0.0",
    "update-notifier": "^7.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^12.0.0",
    "@types/bun": "^1.3.1",
    "@types/minimatch": "5.1.2",
    "bun-types": "latest",
    "license-check-and-add": "^4.0.5",
    "typescript": "^5.7.0"
  },
  "optionalDependencies": {
    "cli-progress": "^3.12.0",
    "figlet": "^1.7.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "_comments": {
    "files_bin": "bin/forge is required by install.sh to bootstrap the CLI after installation",
    "bun-types": "for VS Code to detect Bun.* I had to include @types/bun, it did not like bun-types by itself"
  }
}
