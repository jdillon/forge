{
  "name": "@planet57/forge",
  "version": "2.0.0-alpha.1",
  "description": "Modern CLI framework for deployments - TypeScript/Bun implementation",
  "author": "Jason Dillon",
  "license": "Apache-2.0",
  "type": "module",
  "exports": {
    "./types": "./lib/types.ts",
    "./logger": "./lib/logging/index.ts",
    "./lib/*": "./lib/*"
  },
  "keywords": [
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jdillon/forge.git"
  },
  "files": [
    "bin/",
    "lib/**/*.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "bun run pack && bun test",
    "test:junit": "bun run pack && mkdir -p build/test-reports && bun test --reporter=junit --reporter-outfile=build/test-reports/junit.xml",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf build/",
    "pack": "bun pm pack --destination build/ --quiet",
    "testsuite": "bun clean && bun install && bun pack && bun test",
    "reinstall": "bin/uninstall.sh -y && bun pm pack --destination build/ --quiet && bin/install.sh -y"
  },
  "dependencies": {
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "14.0.2",
    "cosmiconfig": "^9.0.0",
    "enquirer": "^2.4.1",
    "listr2": "^8.0.0",
    "omelette": "^0.4.17",
    "ora": "^8.0.0",
    "pino": "^8.19.0",
    "update-notifier": "^7.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "bun-types": "latest",
    "pino-pretty": "^11.0.0",
    "@commander-js/extra-typings": "^12.0.0"
  },
  "optionalDependencies": {
    "cli-progress": "^3.12.0",
    "figlet": "^1.7.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
