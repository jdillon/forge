{
  "src": [
    "lib/**/*.ts",
    "bin/install.sh",
    "bin/uninstall.sh",
    "tests/**/*.ts"
  ],
  "path": "license-header.txt",
  "ignore": [
    ".DS_Store",
    ".gitignore",
    ".gitattributes",
    ".npmignore",
    ".beads/**/*",
    ".specify/**/*",
    ".claude/**/*",
    ".idea/**/*",
    "node_modules/**/*",
    "build/**/*",
    "tmp/**/*",
    "dev-home/**/*",
    "sandbox/**/*",
    "docs/**/*",
    "examples/**/*",
    "**/*.d.ts",
    "**/*.md",
    "**/*.json",
    "**/*.yml",
    "**/*.yaml",
    "**/*.toml",
    "**/*.lock"
  ],
  "license": "license-header.txt",
  "licenseFormats": {
    "ts|js": {
      "eachLine": {
        "prepend": "// "
      }
    },
    "sh": {
      "eachLine": {
        "prepend": "# "
      }
    }
  },
  "trailingWhitespace": "TRIM",
  "insert": "true"
}
